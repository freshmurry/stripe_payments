<% content_for :head do %>
  <%= image_tag('cake.jpg', id: 'content-header-img', alt: 'Cake') %>
<% end %>

<section id="content-details" class="row clearfix">
  <article id="details-article" class="col-sm-12">
    <h1 id="article-title">The Red Velvet Cake</h1>
  </article>
</section>

<section id="products">
	<% @products.each do |product| %>
		 <div class="product clearfix">
		   <a href="<%= product_path(product) %>"><div class="product-image-container">
		     <img src="<%= asset_path product.thumbnail_image_name %>" alt="<%= product.title %>"/>
		     <span class="product-price"><%= number_to_currency(product.price)%></span>
		   </div>
		   <p class="product-title"><%= product.title %></p></a>
		 </div>
	<% end %>
</section>